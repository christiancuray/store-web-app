<div class="row">
  <section class="main col-md-9">
    <!-- Check if the current item exists -->
    {{#if data.item}}
      <item>
        <div class="row">
          <div class="col-4">
            <!-- Display the item title -->
            <h2>{{data.item.title}}</h2>
            <!-- Display the feature image -->
            <img
              src="{{data.item.featureImage}}"
              alt="Feature Image"
              style="width:100%"
            />
          </div>

          <div class="col-8">
            <br /><br />
            <div class="row">
              <div class="col-12">
                <!-- Display the item body with safeHTML helper -->
                {{#safeHTML data.item.body}}{{/safeHTML}}
                <br /><br />
                <!-- Display price, category, and last updated date -->
                <strong>Price:</strong> ${{data.item.price}}<br />
                <strong>Category:</strong> {{data.item.category}}<br />
                <strong>Last Updated:</strong> {{data.item.postDate}}
              </div>
            </div>
          </div>
        </div>
      </item>
  </section>

  <aside class="col-md-3">
    <br /><br />

    <!-- Items Section -->
    {{#if data.items}} 
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.items}}
          <!-- Each item link -->
          <a href="/shop/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">
            {{this.title}}
          </a>
        {{/each}}
      </ul>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Item</p>
      </div>
    {{/if}}

    <!-- Categories Section -->
    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <!-- Each category link -->
          <a href="/shop?category={{this.id}}" class="list-group-item">
            {{this.category}}           
            </a>
        {{/each}}
      </ul>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>No categories available</p>
      </div>
    {{/if}}
  </aside>
</div>
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Item</p>
  </div>
{{/if}}
