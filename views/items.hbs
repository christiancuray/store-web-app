<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/Items/add" class="btn btn-success pull-right">Add Item</a>
    <hr />
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Item ID</th>
          <th>Title</th>
          <th>Post Date</th>
          <th>Category</th>
          <th>Price</th>
          <th>Published</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{#formatDate this.itemDate}}{{/formatDate}}</td>
            <td><a
                href="/items?category={{this.category}}"
              >{{this.category}}</a></td>
            <td>$ {{this.price}}</td>
            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
            <td><a
                href="/items/delete/{{this.id}}"
                class="btn btn-danger"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{#unless items}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>